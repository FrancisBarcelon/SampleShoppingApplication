@model Product


<div class="content">
     <h2> Add to Cart</h2>
     <hr />

      <div class="row">

          <form asp-action="Create" method="post">
              @Html.AntiForgeryToken()
              <div class="form-group">
                  <label asp-for="Name"></label>
                  <input asp-for="Name" type="text" class="form-control" />
                  <span asp-validation-for="Name"></span>
              </div>
            <div class="form-group">
                <label asp-for="Cost"></label>
                <input asp-for="Cost" type="text" class="form-control" />
                <span asp-validation-for="Cost"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" type="text" class="form-control" />
                <span asp-validation-for="Quantity"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount"></label>
                <input asp-for="Amount" type="text" class="form-control" />
                <span asp-validation-for="Amount"></span>
            </div>

            <div class="col-12">
                <a asp-action="Index" class="btn btn-danger">Cancel</a>
                <button type="Submit" class="btn btn-success">Save</a>
            </div>
          </form>

      </div>






</div>